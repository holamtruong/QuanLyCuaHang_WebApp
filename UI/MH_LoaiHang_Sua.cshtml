@using QuanLyCuaHang_WebApp;
@{
    Layout = "~/UI/_Layout_Dashboard.cshtml";
    Page.Title = "Quản lý cửa hàng";

    var maso = int.Parse(Request["maso"]);

    LoaiHang lh;


    if (IsPost)
    {
        lh.MaSo = int.Parse(Request["maSo"]);
        lh.TenLoaiHang = Request["tenLoaiHang"];

        XL_LoaiHang.SuaDanhSach(lh);

        Response.Redirect("~/UI/MH_LoaiHang_DanhSach.cshtml");
    }
    else
    {
        lh = XL_LoaiHang.TimKiemDoiTuong(maso);
    }



}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>


    <div class="container-fluid">
        <div class="row">
            <!-- Menu Sidebar-->
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3  mb-1 text-muted">
                        <span>Quản lý chung</span>
                    </h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="~/UI/MH_MatHang_DanhSach.cshtml">
                                <span data-feather="shopping-cart"></span>
                                Mặt hàng
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link active" href="~/UI/MH_LoaiHang_DanhSach.cshtml">
                                <span data-feather="grid"></span>
                                Loại hàng
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/UI/MH_DonHangXuat_DanhSach.cshtml">
                                <span data-feather="file"></span>
                                Hóa đơn bán
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="~/UI/MH_DonHangNhap_DanhSach.cshtml">
                                <span data-feather="file"></span>
                                Hóa đơn nhập
                            </a>
                        </li>
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Thống kê</span>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link" href="~/UI/MH_ThongKe_TonKho.cshtml">
                                <span data-feather="file-text"></span>
                                Hàng tồn kho
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/UI/MH_ThongKe_HetHan.cshtml">
                                <span data-feather="file-text"></span>
                                Hàng hết hạn
                            </a>
                        </li>

                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Liên hệ</span>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link" href="~/UI/MH_LienHe.cshtml">
                                <span data-feather="user"></span>
                                Tác giả
                            </a>
                        </li>
                    </ul>

                </div>
            </nav>


            <!-- Content -->
            <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h3">Mặt hàng</h1>
                    <!-- breadcrumb -->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/UI/MH_LoaiHang_DanhSach.cshtml"> Danh sách dữ liệu</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa dữ liệu</li>
                        </ol>
                    </nav>
                </div>

                <!-- Form -->
                <h4>Chỉnh sửa dữ liệu</h4>
                <form action="" method="post">
                    <div class="mb-3">
                        <label class="form-label"> Mã số </label>
                        <input type="text" name="maSo" value="@lh.MaSo" readonly class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label"> Tên mặt hàng</label>
                        <input type="text" name="tenLoaiHang" value="@lh.TenLoaiHang" class="form-control">
                    </div>

               

                    <div class="mb-3">
                        <button type="button" class="btn btn-secondary" onclick="window.location.href='MH_LoaiHang_DanhSach.cshtml'"> Quay lại</button>
                        <button type="submit" class="btn btn-primary">Lưu trữ</button>
                    </div>
                </form>

            </main>
        </div>
    </div>

</body>
</html>
