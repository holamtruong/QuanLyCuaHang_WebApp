@using QuanLyCuaHang_WebApp;
@{
    Layout = "~/UI/_Layout_Dashboard.cshtml";
    Page.Title = "Quản lý cửa hàng";


    List<MatHang> ds_mathang = new List<MatHang>();
    ds_mathang = XL_MatHang.TimKiemDanhSach(String.Empty);

    List<LoaiHang> ds_loai = new List<LoaiHang>();
    ds_loai = XL_LoaiHang.TimKiemDanhSach(String.Empty);

    List<BaoCaoMatHang> kq_mathang = new List<BaoCaoMatHang>();
    List<BaoCaoLoaiHang> kq_loaihang = new List<BaoCaoLoaiHang>();

    var RadioButton = Request.Form["RadioButton_TheLoai"];


    if (RadioButton == "ThongKeMatHang" || String.IsNullOrEmpty(RadioButton))
    {

        //Chạy thống kê
        RadioButton = "ThongKeMatHang";
        kq_mathang = XL_ThongKe.ThongKeMatHang();

    }
    else
    {
        //Chạy thống kê
        RadioButton = "ThongKeLoaiHang";
        kq_loaihang = XL_ThongKe.ThongKeLoaiHang();
    }



}




<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>


    <div class="container-fluid">
        <div class="row">
            <!-- Menu Sidebar-->
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3  mb-1 text-muted">
                        <span>Quản lý chung</span>
                    </h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="~/UI/MH_MatHang_DanhSach.cshtml">
                                <span data-feather="shopping-cart"></span>
                                Mặt hàng
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="~/UI/MH_LoaiHang_DanhSach.cshtml">
                                <span data-feather="grid"></span>
                                Loại hàng
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/UI/MH_DonHangXuat_DanhSach.cshtml">
                                <span data-feather="file"></span>
                                Hóa đơn bán
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="~/UI/MH_DonHangNhap_DanhSach.cshtml">
                                <span data-feather="file"></span>
                                Hóa đơn nhập
                            </a>
                        </li>
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Thống kê</span>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link active" href="~/UI/MH_ThongKe_TonKho.cshtml">
                                <span data-feather="file-text"></span>
                                Hàng tồn kho
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/UI/MH_ThongKe_HetHan.cshtml">
                                <span data-feather="file-text"></span>
                                Hàng hết hạn
                            </a>
                        </li>

                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Liên hệ</span>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link" href="~/UI/MH_LienHe.cshtml">
                                <span data-feather="user"></span>
                                Tác giả
                            </a>
                        </li>
                    </ul>

                </div>
            </nav>


            <!-- Content -->
            <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h3">Thống kê hàng tồn kho</h1>
                    <!-- breadcrumb -->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page">Danh sách dữ liệu</li>
                        </ol>
                    </nav>
                </div>



                <!-- Chon thong ke -->
                <form class="mb-3" action="~/UI/MH_ThongKe_TonKho.cshtml" method="post">
                    @if (RadioButton == "ThongKeMatHang")
                    {
                        <div class="form-check mb-1">
                            <input class="form-check-input" type="radio" name="RadioButton_TheLoai" value="ThongKeMatHang" checked>
                            <label class="form-check-label">
                                Thống kê theo Mặt hàng
                            </label>
                        </div>
                        <div class="form-check mb-1">
                            <input class="form-check-input" type="radio" name="RadioButton_TheLoai" value="ThongKeLoaiHang">
                            <label class="form-check-label">
                                Thống kê theo Loại hàng
                            </label>
                        </div>
                    }
                    else
                    {
                        <div class="form-check mb-1">
                            <input class="form-check-input" type="radio" name="RadioButton_TheLoai" value="ThongKeMatHang" >
                            <label class="form-check-label">
                                Thống kê theo Mặt hàng
                            </label>
                        </div>
                        <div class="form-check mb-1">
                            <input class="form-check-input" type="radio" name="RadioButton_TheLoai" value="ThongKeLoaiHang" checked>
                            <label class="form-check-label">
                                Thống kê theo Loại hàng
                            </label>
                        </div>
                    }
                    <button type="submit" class="btn btn-primary mb-3">Chạy thống kê</button>
                </form>

                @if (RadioButton == "ThongKeMatHang")
                {
                    <h4>Hàng tồn kho theo mặt hàng</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>Mã số</th>
                                    <th>Tên mặt hàng</th>
                                    <th>Số lượng nhập kho</th>
                                    <th>Số lượng xuất kho</th>
                                    <th>Số lượng tồn kho</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var x in kq_mathang)
                                {
                                    <tr>
                                        <td>@x.MaSo</td>
                                        <td>@x.TenMatHang</td>
                                        <td>@x.SoLuongNhap</td>
                                        <td>@x.SoLuongXuat</td>
                                        <td>@x.SoLuongConLai</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else if (RadioButton == "ThongKeLoaiHang")
                {
                    <h4>Hàng tồn kho theo loại hàng</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>Mã số</th>
                                    <th>Tên loại hàng</th>
                                    <th>Số lượng nhập kho</th>
                                    <th>Số lượng xuất kho</th>
                                    <th>Số lượng tồn kho</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var x in kq_loaihang)
                                {
                                    <tr>
                                        <td>@x.MaSo</td>
                                        <td>@x.TenLoaiHang</td>
                                        <td>@x.SoLuongNhap</td>
                                        <td>@x.SoLuongXuat</td>
                                        <td>@x.SoLuongConLai</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-primary" role="alert">
                        Vui lòng chọn thể loại thống kê!
                    </div>
                }


            </main>
        </div>
    </div>

</body>
</html>
